{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "body"}}
	<h2>Latest Courses</h2>
	{{if .Courses}}
	<table>
		<tr>
			<th>Title</th>
			<th>Created</th>
			<th>ID</th>
		</tr>
		{{range .Courses}}
		<tr>
			<td><a href="/course?id={{.ID}}">{{.Title}}</a></td>
			<td>{{.Created}}</td>
			<td>#{{.ID}}</td>
		</tr>
		{{end}}
	</table>
	{{else}}
		<p>There is nothing yet</p>
	{{end}}
{{end}}

